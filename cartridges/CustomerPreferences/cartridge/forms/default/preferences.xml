<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<group formid="customerPreferences">
		<!-- Birhday -->
		<field
			formid="birthday"
			label="label.profile.birthday"
			mandatory="false"
			format="yyyy-MM-dd"
			type="date" />

		<!-- Interests -->
		<!-- Electronic -->
		<field
			formid="interestsElectronic"
			label="label.profile.interests.electronic"
			mandatory="false"
			type="boolean" />
		<!-- Apparel -->
		<field
			formid="interestsApparel"
			label="label.profile.interests.apparel"
			mandatory="false"
			type="boolean" />

		<!-- Newsletter -->
		<field
			formid="newsletterSubscription"
			label="label.profile.newsletter"
			mandatory="false"
			type="boolean"/>
	</group>

</form>